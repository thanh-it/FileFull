<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QLSV.AddStudentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="223dp"
            android:layout_height="149dp"
            android:layout_gravity="center"
            android:src="@drawable/img" />

        <EditText
            android:id="@+id/mssv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã Sinh Viên" />
        <EditText
            android:id="@+id/namesv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên Sinh Viên" />

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày Sinh dd/mm/yyyy"
            android:inputType="datetime" />
        <EditText
            android:id="@+id/malopsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã Lớp" />

        <EditText
            android:id="@+id/ngayhoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày Nhập Học"
            android:inputType="date" />

        <Button
            android:id="@+id/clearsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLEAR" />

        <Button
            android:id="@+id/addsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD STUDENT" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>